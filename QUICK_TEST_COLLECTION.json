{
  "info": {
    "name": "Kasome Subscription APIs",
    "description": "Postman collection for testing subscription APIs",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "https://portal.kasome.com/api",
      "type": "string"
    },
    {
      "key": "auth_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "user_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"phone\": \"+255712345678\",\n  \"password\": \"your_password\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/users/login",
          "host": ["{{base_url}}"],
          "path": ["users", "login"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "    var jsonData = pm.response.json();",
              "    if (jsonData.token) {",
              "        pm.collectionVariables.set('auth_token', jsonData.token);",
              "        pm.collectionVariables.set('user_id', jsonData.data.id);",
              "    }",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "2. Check Course Access",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{auth_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/users/courses/1?user_id={{user_id}}",
          "host": ["{{base_url}}"],
          "path": ["users", "courses", "1"],
          "query": [
            {
              "key": "user_id",
              "value": "{{user_id}}"
            }
          ]
        }
      }
    },
    {
      "name": "3. Create Subscription (All Courses)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{auth_token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"user_id\": {{user_id}},\n  \"subscription_type\": \"all_courses\",\n  \"amount\": 50000,\n  \"start_date\": \"2025-01-12\",\n  \"end_date\": \"2025-12-31\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/users/subscription/create",
          "host": ["{{base_url}}"],
          "path": ["users", "subscription", "create"]
        }
      }
    },
    {
      "name": "4. Create Subscription (Specific Courses)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{auth_token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"user_id\": {{user_id}},\n  \"subscription_type\": \"specific_courses\",\n  \"amount\": 30000,\n  \"start_date\": \"2025-01-12\",\n  \"end_date\": \"2025-12-31\",\n  \"course_ids\": [1, 5, 10]\n}"
        },
        "url": {
          "raw": "{{base_url}}/users/subscription/create",
          "host": ["{{base_url}}"],
          "path": ["users", "subscription", "create"]
        }
      }
    },
    {
      "name": "5. Get User Subscriptions",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{auth_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/users/subscriptions?user_id={{user_id}}",
          "host": ["{{base_url}}"],
          "path": ["users", "subscriptions"],
          "query": [
            {
              "key": "user_id",
              "value": "{{user_id}}"
            }
          ]
        }
      }
    },
    {
      "name": "6. Check Course Access (Dedicated Endpoint)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{auth_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/users/courses/1/access?user_id={{user_id}}",
          "host": ["{{base_url}}"],
          "path": ["users", "courses", "1", "access"],
          "query": [
            {
              "key": "user_id",
              "value": "{{user_id}}"
            }
          ]
        }
      }
    },
    {
      "name": "7. Get Accessible Courses",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{auth_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/users/courses/accessible?user_id={{user_id}}",
          "host": ["{{base_url}}"],
          "path": ["users", "courses", "accessible"],
          "query": [
            {
              "key": "user_id",
              "value": "{{user_id}}"
            }
          ]
        }
      }
    }
  ]
}

