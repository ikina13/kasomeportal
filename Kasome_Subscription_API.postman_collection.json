{
	"info": {
		"_postman_id": "kasome-subscription-api",
		"name": "Kasome Subscription APIs",
		"description": "Complete API collection for testing flexible subscription system",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8000/api",
			"type": "string"
		},
		{
			"key": "auth_token",
			"value": "",
			"type": "string"
		},
		{
			"key": "user_id",
			"value": "1448",
			"type": "string"
		},
		{
			"key": "subscription_id",
			"value": "",
			"type": "string"
		},
		{
			"key": "course_id",
			"value": "1",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    if (jsonData.token) {",
									"        pm.collectionVariables.set('auth_token', jsonData.token);",
									"        pm.collectionVariables.set('user_id', jsonData.data.id);",
									"        console.log('Token saved:', jsonData.token.substring(0, 20) + '...');",
									"        console.log('User ID saved:', jsonData.data.id);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"phone\": \"+255753477509\",\n  \"password\": \"12345678\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/users/login",
							"host": ["{{base_url}}"],
							"path": ["users", "login"]
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "Subscriptions",
			"item": [
				{
					"name": "Create Subscription - All Courses",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    if (jsonData.data && jsonData.data.id) {",
									"        pm.collectionVariables.set('subscription_id', jsonData.data.id);",
									"        console.log('Subscription ID saved:', jsonData.data.id);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"user_id\": {{user_id}},\n  \"subscription_type\": \"all_courses\",\n  \"amount\": 50000,\n  \"start_date\": \"2025-01-12\",\n  \"end_date\": \"2025-12-31\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/users/subscription/create",
							"host": ["{{base_url}}"],
							"path": ["users", "subscription", "create"]
						}
					},
					"response": []
				},
				{
					"name": "Create Subscription - Specific Courses",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    if (jsonData.data && jsonData.data.id) {",
									"        pm.collectionVariables.set('subscription_id', jsonData.data.id);",
									"        console.log('Subscription ID saved:', jsonData.data.id);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"user_id\": {{user_id}},\n  \"subscription_type\": \"specific_courses\",\n  \"amount\": 30000,\n  \"start_date\": \"2025-01-12\",\n  \"end_date\": \"2025-12-31\",\n  \"course_ids\": [1, 2, 3, 5, 10]\n}"
						},
						"url": {
							"raw": "{{base_url}}/users/subscription/create",
							"host": ["{{base_url}}"],
							"path": ["users", "subscription", "create"]
						}
					},
					"response": []
				},
				{
					"name": "Get User Subscriptions",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/users/subscriptions?user_id={{user_id}}",
							"host": ["{{base_url}}"],
							"path": ["users", "subscriptions"],
							"query": [
								{
									"key": "user_id",
									"value": "{{user_id}}"
								}
							]
						}
					},
					"response": []
				},
				{
					"name": "Add Courses to Subscription",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"user_id\": {{user_id}},\n  \"course_ids\": [15, 20, 25]\n}"
						},
						"url": {
							"raw": "{{base_url}}/users/subscription/{{subscription_id}}/courses/add",
							"host": ["{{base_url}}"],
							"path": ["users", "subscription", "{{subscription_id}}", "courses", "add"]
						}
					},
					"response": []
				},
				{
					"name": "Remove Courses from Subscription",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"course_ids\": [15, 20]\n}"
						},
						"url": {
							"raw": "{{base_url}}/users/subscription/{{subscription_id}}/courses/remove",
							"host": ["{{base_url}}"],
							"path": ["users", "subscription", "{{subscription_id}}", "courses", "remove"]
						}
					},
					"response": []
				},
				{
					"name": "Cancel Subscription",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"user_id\": {{user_id}}\n}"
						},
						"url": {
							"raw": "{{base_url}}/users/subscription/{{subscription_id}}/cancel",
							"host": ["{{base_url}}"],
							"path": ["users", "subscription", "{{subscription_id}}", "cancel"]
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "Course Access",
			"item": [
				{
					"name": "Check Course Access",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/users/courses/{{course_id}}?user_id={{user_id}}",
							"host": ["{{base_url}}"],
							"path": ["users", "courses", "{{course_id}}"],
							"query": [
								{
									"key": "user_id",
									"value": "{{user_id}}"
								}
							]
						}
					},
					"response": []
				},
				{
					"name": "Check Course Access (Dedicated)",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/users/courses/{{course_id}}/access?user_id={{user_id}}",
							"host": ["{{base_url}}"],
							"path": ["users", "courses", "{{course_id}}", "access"],
							"query": [
								{
									"key": "user_id",
									"value": "{{user_id}}"
								}
							]
						}
					},
					"response": []
				},
				{
					"name": "Get Accessible Courses",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/users/courses/accessible?user_id={{user_id}}",
							"host": ["{{base_url}}"],
							"path": ["users", "courses", "accessible"],
							"query": [
								{
									"key": "user_id",
									"value": "{{user_id}}"
								}
							]
						}
					},
					"response": []
				}
			]
		}
	]
}

